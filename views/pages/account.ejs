<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body style="padding-top: 80px">
  <!-- Navigation-->
  <%- include('../partials/navbar'); %>

  <section class="bg-light pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Full Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="full-name"><%= fullName %></p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Username</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="username"><%= username %></p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Role</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="role">
                <% if (roleID === 0) { %> Student <% } %>
                <% if (roleID === 1) { %> Teacher <% } %>
                <% if (roleID === 2) { %> Admin <% } %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">School</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="school"><%= school %></p>
            </div>
          </div>
          <div class="text-center mt-2">
			<div id="profile" class="col-lg-8 offset-lg-2">
            <button id="edit-btn" type="button" class="btn btn-primary">Edit Profile</button>
          </div>
        </div>
      </div>
    </div>
	<script>
  const editBtn = document.getElementById("edit-btn");

  editBtn.addEventListener("click", function() {
    const newWindow = window.open("", "edit-window", "width=500,height=500");
    newWindow.document.write(`
      <html>
        <head>
          <title>Edit Profile</title>
          <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        </head>
        <body>
          <div class="container mt-5">
            <form id="edit-form">
              <div class="form-group">
                <label for="full-name">Full Name</label>
                <input type="text" class="form-control" id="full-name-input" value="<%= fullName %>">
              </div>
              <div class="form-group">
                <label for="school">School</label>
                <input type="text" class="form-control" id="school" value="<%= school %>">
              </div>
              <button type="submit" class="btn btn-primary">Save</button>
            </form>
          </div>
        </body>
      </html>
    `);
  });
  </script>

  </section>
</body>

