<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile page</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    html,
    body {
      height: 100%;
      margin: auto;
    }

    section.bg-light {
      background-color: #f8f9fa;
      height: 100%;
    }

    .container {
      height: 100%;
      display: 100%;
      align-items: center;
      justify-content: center;
    }

    .card {
      border: none;
      box-shadow: 10px 10px 10px rgba(10, 10, 10, 0.5);
      border-radius: 50px;
      transition: transform 0.3s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-body.text-center {
      position: relative;
    }


    .font-weight-bold {
      font-weight: bold;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      font-weight: bold;
      letter-spacing: 1px;
      transition: all 0.3s;
    }

    .btn-primary:hover {
      background-color: #0069d9;
      border-color: #0062cc;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    hr {
      border-top: 1px solid #dee2e6;
      margin: 1rem 0;
    }

    .text-muted {
      color: #6c757d;
    }
	button{
     Display:block;
     Margin: auto;
	}
	


  </style>
</head>

<body>
  <section class="bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Full Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="full-name"><%= FullName %></p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Username</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="username"><%= username %></p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">Role</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="role"><%= Role %></p>
            </div>
          </div>
          <hr>
          <div class="row mb-2">
            <div class="col-sm-3">
              <p class="mb-0 font-weight-bold">School</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" id="school"><%= School %></p>
            </div>
          </div>
          <div class="text-center mt-2">
			<div id="profile" class="col-lg-8 offset-lg-2">
            <button id="edit-btn" type="button" class="btn btn-primary">Edit Profile</button>
          </div>
        </div>
      </div>
    </div>
	<script>
  const editBtn = document.getElementById("edit-btn");

  editBtn.addEventListener("click", function() {
    const newWindow = window.open("", "edit-window", "width=500,height=500");
    newWindow.document.write(`
      <html>
        <head>
          <title>Edit Profile</title>
          <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        </head>
        <body>
          <div class="container mt-5">
            <form id="edit-form">
              <div class="form-group">
                <label for="full-name">Full Name</label>
                <input type="text" class="form-control" id="full-name-input" value="<%= FullName %>">
              </div>
              <div class="form-group">
                <label for="role">Role</label>
                <input type="text" class="form-control" id="role" value="<%= Role %>">
              </div>
              <div class="form-group">
                <label for="school">School</label>
                <input type="text" class="form-control" id="school" value="<%= School %>">
              </div>
              <button type="submit" class="btn btn-primary">Save</button>
            </form>
          </div>
        </body>
      </html>
    `);
  });
</script>

  </section>
</body>

